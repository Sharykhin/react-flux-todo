{
  "name": "todomvc-flux",
  "version": "0.0.1",
  "description": "Example Flux architecture.",
  "repository": "https://github.com/Sharykhin/react-flux-todo/tree/flux",
  "main": "app/scripts/app.js",
  "dependencies": {
    "classnames": "^2.1.3",
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.12.0"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",   
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1",
    "http-server": "~0.8.4"
  },
  "scripts": {
    "start": "watchify -o app/dist/js/bundle.js -v -d app/scripts/app.js",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > app/dist/js/bundle.min.js",
    "serve": "cd app && http-server -p 8000 -o",
    "test": "echo 'Test is working'"
  },
  "author": "Siarhei Sharykhin",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  } 
}
